---
import "@/styles/modules/contactbanner.less";
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<section
  class="section-container contactbanner contactbanner-no-padding background-0"
  {...storyblokEditable(blok)}
>
  <div class="container">
    <div class="flex">
      <div class="w-6/12">
        <div class="contactbanner-item contactbanner-item-left">
          <h2>{blok.headline}</h2>
        </div>
      </div>
      <div class="w-6/12 contactbanner-item-outer">
        <div class="contactbanner-item">
          <div class="contactbanner-item-button">
            {
              blok?.link?.story && (
                <a href={blok?.link?.story ? blok.link.story.full_slug : "#"} class="button type-1">
                  {blok.link_text ? blok.link_text : "Get in touch now"}
                </a>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
